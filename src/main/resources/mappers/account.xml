<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.post.account.mapper.AccountMapper">

    <resultMap id="account" type="com.post.account.model.Account">
        <result column="account_no" property="memberNo"/>
        <result column="role" property="role"/>
        <result column="id" property="id"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="cell_phone" property="cellPhone"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="creator" property="creator"/>
        <result column="create_dt" property="createDt" javaType="java.time.LocalDateTime"/>
    </resultMap>

    <select id="findById" parameterType="com.post.account.model.Account" resultMap="account">
        SELECT *
        FROM account
        WHERE 1=1
        <if test="id != null"> AND id = #{id} </if>
    </select>
</mapper>